<%- include('layout/header')%>
<div class="container">
    <div class="row">
        <div class="col-12">
            <!DOCTYPE html>
            <html lang="en">
            <head>
                <meta charset="UTF-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <title>Add New User</title>
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
                <style>
                    /* Custom styles */
                    .container-box {
                        max-width: 500px;
                        margin: 50px auto;
                        padding: 20px;
                        border: 1px solid #ccc;
                        border-radius: 10px;
                    }
                  
                </style>
            </head>
            <body>
                <div class="container-box">
                    <!-- Header -->
                    <h2 class="text-center text-white bg-success p-3 rounded">Edit User (<%= user.name %>)</h2>
                    
                    <!-- Form -->
                    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" value="<%= user.name%>" name="name" placeholder="Enter name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email"  value="<%= user.email%>" placeholder="Enter email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" name="phone"  value="<%= user.phone%>" id="phone" placeholder="Enter phone number" required>
                        </div>
                        <div class="mb-3">
                            <label for="file" class="form-label">File Upload</label>
                            <input type="file" class="form-control form-control-lg" name="image" id="file" >
                            <img src="/<%= user.image%>" width="50" class="img-thumbnail mt-1">
                        </div>

                        <input type="hidden" name="old_image" value="<$= user.image $>">

                        <button type="submit" name="submit" value="Upload User" class="btn btn-success btn-lg w-100">Add User</button>
                    </form>
                </div>
            </body>
            </html>
            
        </div>
    </div>
</div>
<%- include('layout/footer')%>
